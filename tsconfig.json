{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    }
}
