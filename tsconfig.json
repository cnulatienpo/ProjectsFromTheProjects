{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2023"
        ],
        "types": [
            "node",
            "@playwright/test"
        ],
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src",
        "tests",
        "types",
        "scripts/**/*.ts",
        "scripts/**/*.tsx",
        "vite.config.ts",
        "playwright.config.ts"
    ],
    "exclude": [
        "node_modules",
        "app",
        "docs",
        "literary-deviousness",
        "server",
        "_archive",
        "api-service",
        "library"
    ]
}
