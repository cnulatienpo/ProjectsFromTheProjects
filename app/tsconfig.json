{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "jsx": "react-jsx",
        "allowJs": true,
        "checkJs": false,
        "strict": false,
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": [
            "react",
            "react-dom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx"
    ],
    "exclude": [
        "src/config.js",
        "src/copy/levels.js",
        "src/lib/drafts.js",
        "src/lib/storage.js",
        "src/lib/upload.js",
        "src/mocks/apiMock.js"
    ]
}
